<header id="fh5co-header" class="fh5co-cover js-fullheight" role="banner"
    style="background-image: url(images/menu.jpg);" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="display-t js-fullheight">
                    <div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
                        <h1>See <em>Our</em> Menu</h1>
                        {{#if login}}{{else}}
                        <p style="display: inline-block; margin: 40px 0 0 0;"><a href="/in" style="margin: 12px;"
                                class="btn btn-primary btn-outline">Sign In</a></p>
                        <p style="display: inline-block; margin: 40px 0 0 0;"><a href="/register"
                                style="background: #ec3e44; margin: 12px;" class="btn btn-primary btn-outline">Sign
                                Up</a></p>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div id="fh5co-featured-menu" class="fh5co-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 fh5co-heading animate-box">
                <h2>Our Delicous Menu</h2>
                <div class="row">
                    <div class="col-md-6">
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis ab debitis sit itaque
                            totam, a maiores nihil, nulla magnam porro minima officiis! Doloribus aliquam voluptates
                            corporis et tempora consequuntur ipsam, itaque, nesciunt similique commodi omnis. Ad magni
                            perspiciatis, voluptatum repellat.</p>
                    </div>
                </div>
                <a href="/menu?is_drink=false" class="btn btn-primary btn-outline {{#compare is_drink "&is_drink=false"}}btn-active{{/compare}}">Food</a>
                <a href="/menu?is_drink=true" class="btn btn-primary btn-outline {{#compare is_drink "&is_drink=true"}}btn-active{{/compare}}">Drink</a>
                
                <a href="/menu?sort=price{{is_drink}}"><i class="icon-arrow-up22"></i></a>
                <a href="/menu?sort=-price{{is_drink}}"><i class="icon-arrow-down22"></i></a>
            </div>


            {{#each fds}}

            {{#if_even @index}}
            <div class="col-md-3 col-sm-6 col-xs-6 col-xxs-12 fh5co-item-wrap">
                <div class="fh5co-item animate-box">
                    <a class="a-cover" href="/detail/{{this._id}}">
                        <img src="{{this.avatar}}" class="img-responsive" alt="{{this.cloudinary_id}}">
                        <h3>{{this.name}}</h3>
                    </a>
                    <span class="fh5co-price">${{this.price}}</span>
                    <p>{{this.description}}</p>
                </div>
            </div>
            {{else}}
            <div class="col-md-3 col-sm-6 col-xs-6 col-xxs-12 fh5co-item-wrap">
                <div class="fh5co-item margin_top animate-box">
                    <a class="a-cover" href="/detail/{{this._id}}">
                        <img src="{{this.avatar}}" class="img-responsive" alt="{{this.cloudinary_id}}">
                        <h3>{{this.name}}</h3>
                    </a>
                    <span class="fh5co-price">${{this.price}}</span>
                    <p>{{this.description}}</p>
                </div>
            </div>
            {{/if_even}}

            {{/each}}

        </div>

        {{#if is_notOne}}

        <div class="pagination" style="margin-top: 40px;">
            <ul>
                <li {{#if prev}}{{else}}class="noneDisplay" {{/if}}><a href="/menu?page={{prev}}{{sort}}{{is_drink}}"
                        class="btn btn-primary btn-outline">&lt;&lt;</a></li>

                {{#times pages}}

                <li><a href="/menu?page={{this}}{{../sort}}{{../is_drink}}"
                        class="btn btn-primary btn-outline {{#compare this ../current operator="=="}}btn-active{{/compare}}">{{this}}</a>
                </li>

                {{/times}}

                <li {{#if is_overload}}class="noneDisplay" {{/if}}><a href="/menu?page={{next}}{{sort}}{{is_drink}}"
                        class="btn btn-primary btn-outline">&gt;&gt;</a></li>
            </ul>
        </div>

        {{/if}}

    </div>
</div>

<div id="fh5co-started" class="fh5co-section animate-box" style="background-image: url(images/book-a-table.jpg);"
    data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row animate-box">
            <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                <h2>Book a Table</h2>
                <p>You want to have a nice dinner with family or friends? <br>
                    No worry, you can book a table up to two months in advanced!</p>
                <p><a href="/reservation" class="btn btn-primary btn-outline">Book Now</a></p>
            </div>
        </div>
    </div>
</div>