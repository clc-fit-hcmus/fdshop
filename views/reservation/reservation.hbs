<header id="fh5co-header" class="fh5co-cover js-fullheight" role="banner"
    style="background-image: url(images/book-a-table.jpg);" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="display-t js-fullheight">
                    <div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
                        <h1>Reserved a Table Today!</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div id="fh5co-reservation-form" class="fh5co-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 fh5co-heading animate-box">
                <h2>Reservation</h2>
                <div class="row">
                    <div class="col-md-6">
                        <p>You want to have a nice dinner with family or friends? No worry, you can book a table up to
                            two months in advanced.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-md-push-6 col-sm-6 col-sm-push-6">
                <form action="/reservation" method="POST" id="form-wrap">
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="phone_number">Your Phone Number</label>
                            <input type="text" class="form-control" id="phone_number" name="phone_number" required>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="peoples">How Many People</label>
                            <select name="people" id="people" class="form-control custom_select" required>
                                <option style="background: BurlyWood;" value="1">1</option>
                                <option style="background: BurlyWood;" value="2">2</option>
                                <option style="background: BurlyWood;" value="3">3</option>
                                <option style="background: BurlyWood;" value="4">4</option>
                                <option style="background: BurlyWood;" value="5">5</option>
                                <option style="background: BurlyWood;" value="6">6</option>
                                <option style="background: BurlyWood;" value="7">7</option>
                                <option style="background: BurlyWood;" value="8">8</option>
                                <option style="background: BurlyWood;" value="9">9</option>
                                <option style="background: BurlyWood;" value="10">10</option>
                            </select>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="when">When</label>
                            <input type="date" name="when" id="when" class="form-control" required>
                        </div>
                    </div>
                    {{#if hasErrors}}
                    {{#each errorMessages}}
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <strong>{{this}}</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    {{/each}}
                    {{/if}}
                    {{#if hasSuccesses}}
                    {{#each successMessages}}
                    <div class="alert alert-warning alert-dismissible" role="alert">
                        <strong>{{this}}</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    {{/each}}
                    {{/if}}
                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-primary btn-outline btn-lg" value="BOOK TABLE">
                        </div>
                    </div>

                </form>
            </div>


        </div>
    </div>
</div>